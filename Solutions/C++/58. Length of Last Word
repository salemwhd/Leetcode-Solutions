// time complexity o(n)

class Solution {
public:
    int lengthOfLastWord(string s) {
         bool flag=0;
    int c=0,r=s.size()-1;
    if(s[r]==' ')
        flag=1;
    else
        c++;
    for(int i=r-1;i>=0;i--){
    if(flag&&s[i]==' '){
        continue;
    }

    else {
            flag=0;
        if(s[i]==' ')
            break;
        else {
            c++;

        }
    }

    }
    return c;
    }
};
